




<% layout('layouts/boilerplate') %>

<body class="bg-light">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <h1 class="hero-title">Discover Amazing Places</h1>
            <p class="hero-subtitle">Find your perfect getaway from cozy cottages to luxury villas</p>
            <a href="/listings/new" class="btn btn-primary btn-lg">
                <i class="fas fa-plus-circle me-2"></i>List Your Property
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container my-5">
        <!-- Page Header -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="display-5 fw-bold text-primary">
                        <i class="fas fa-map-marker-alt me-3"></i>All Listings
                    </h2>
                    <span class="badge bg-primary fs-6">
                        <%= allListings.length %> Properties
                    </span>
                </div>
                <p class="text-muted fs-5">Explore our curated collection of beautiful accommodations</p>
            </div>
        </div>

        <!-- Listings Grid -->
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            <% for(let listing of allListings) { %>
            <div class="col">
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card h-100 listing-card">
                        <!-- Image with Overlay -->
                        <div class="position-relative">
                            <img src="<%= listing.image.url %>" 
                                 class="card-img-top" 
                                 alt="<%= listing.title %>"
                                 onerror="this.src='https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=60'">
                            
                            <!-- Price Badge -->
                            <div class="position-absolute top-0 end-0 m-3">
                                <span class="badge bg-success fs-6 px-3 py-2 shadow">
                                    â‚¹<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/night
                                </span>
                            </div>

                            <!-- Location Badge -->
                            <div class="position-absolute bottom-0 start-0 m-3">
                                <span class="badge bg-dark bg-opacity-75 fs-6 px-3 py-2">
                                    <i class="fas fa-map-marker-alt me-1"></i><%= listing.location %>
                                </span>
                            </div>

                            <!-- Hover Overlay -->
                            <div class="card-img-overlay d-flex align-items-center justify-content-center">
                                <div class="overlay-text text-center">
                                    <i class="fas fa-eye fa-2x mb-2"></i>
                                    <h5 class="mb-0">View Details</h5>
                                    <small>Click to explore</small>
                                </div>
                            </div>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body d-flex flex-column">
                            <!-- Title -->
                            <h5 class="card-title fw-bold text-dark mb-2 line-clamp-2">
                                <%= listing.title %>
                            </h5>

                            <!-- Description Preview -->
                            <p class="card-text text-muted small mb-3 line-clamp-3">
                                <%= listing.description.length > 100 ? 
                                    listing.description.substring(0, 100) + '...' : 
                                    listing.description %>
                            </p>

                            <!-- Location & Country -->
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-primary small">
                                        <i class="fas fa-globe me-1"></i><%= listing.country %>
                                    </span>
                                    <span class="text-warning small">
                                        <i class="fas fa-star me-1"></i>4.8
                                    </span>
                                </div>

                                <!-- Action Buttons -->
                                <div class="d-grid gap-2">
                                    <button class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-calendar-plus me-1"></i>Book Now
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Card Footer -->
                        <div class="card-footer bg-transparent border-top-0 pt-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="fas fa-clock me-1"></i>Just added
                                </small>
                                <div class="property-type">
                                    <span class="badge bg-info text-dark">
                                        <i class="fas fa-home me-1"></i>Property
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <% } %>
        </div>

        <!-- Empty State -->
        <% if (allListings.length === 0) { %>
        <div class="text-center py-5">
            <div class="empty-state">
                <i class="fas fa-home fa-4x text-muted mb-3"></i>
                <h3 class="text-muted">No Listings Available</h3>
                <p class="text-muted mb-4">Be the first to add a beautiful property!</p>
                <a href="/listings/new" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>Create First Listing
                </a>
            </div>
        </div>
        <% } %>

        <!-- Load More Section -->
        <div class="text-center mt-5">
            <div class="bg-light p-4 rounded-3">
                <h4 class="mb-3">Found <%= allListings.length %> amazing places</h4>
                <p class="text-muted mb-3">Discover more unique stays around the world</p>
                <a href="/listings/new" class="btn btn-outline-primary">
                    <i class="fas fa-plus me-2"></i>Add Your Listing
                </a>
            </div>
        </div>
    </div>

    <!-- Additional CSS for this page -->
    <style>
        /* Custom styles for the listings page */
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .line-clamp-3 {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .empty-state {
            max-width: 400px;
            margin: 0 auto;
        }

        .property-type {
            font-size: 0.75rem;
        }

        /* Hero section specific to this page */
        .hero-section {
            background: linear-gradient(135deg, 
                rgba(102, 126, 234, 0.9) 0%, 
                rgba(118, 75, 162, 0.9) 100%),
                url('https://images.unsplash.com/photo-1501785888041-af3ef285b470?ixlib=rb-4.0.3&auto=format&fit=crop&w=1950&q=80');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 80px 0;
            text-align: center;
            margin-bottom: 40px;
            border-radius: 0 0 30px 30px;
        }

        .hero-title {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .hero-subtitle {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            opacity: 0.9;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .hero-title {
                font-size: 2rem;
            }
            
            .hero-subtitle {
                font-size: 1rem;
            }
            
            .display-5 {
                font-size: 1.8rem;
            }
        }

        /* Card hover effects */
        .listing-card {
            transition: all 0.3s ease;
        }

        .listing-card:hover {
            transform: translateY(-8px);
        }

        /* Image fallback styling */
        .card-img-top {
            transition: transform 0.3s ease;
        }

        .listing-card:hover .card-img-top {
            transform: scale(1.05);
        }
    </style>

    <!-- JavaScript for enhanced interactivity -->
    <script>
        // Add loading animation to cards
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.listing-card');
            
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
            });

            // Add click effects
            cards.forEach(card => {
                card.addEventListener('click', function() {
                    this.style.transform = 'scale(0.98)';
                    setTimeout(() => {
                        this.style.transform = '';
                    }, 150);
                });
            });
        });

        // Image error handling
        document.addEventListener('error', function(e) {
            if (e.target.tagName === 'IMG' && e.target.classList.contains('card-img-top')) {
                e.target.src = 'https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=60';
            }
        }, true);
    </script>
</body>